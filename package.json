{
  "name": "tollo",
  "private": true,
  "version": "0.1.8",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sambergo/tollo.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "dev:tauri": "tauri dev",
    "build:tauri": "tauri build",
    "check:tauri": "tauri check",
    "start": "tauri dev",
    "clean": "rm -rf dist src-tauri/target",
    "clean:full": "pnpm clean && rm -rf node_modules src-tauri/target pnpm-lock.yaml Cargo.lock",
    "install:all": "pnpm install && cd src-tauri && cargo build",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\""
  },
  "dependencies": {
    "@tauri-apps/api": "~2.6.0",
    "@tauri-apps/plugin-opener": "~2.4.0",
    "hls.js": "^1.6.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
